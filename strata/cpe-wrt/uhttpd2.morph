name: uhttp2
kind: chunk

pre-configure-commands:
- sed -i 's/-Werror//' CMakeLists.txt

configure-commands:
- cmake -DCMAKE_INSTALL_PREFIX=$PREFIX

build-commands:
- make

install-commands:
- make install

post-install-commands:
- install -d "$DESTDIR$PREFIX/sbin" && cd "$DESTDIR$PREFIX/sbin" && ln -s ../.."$PREFIX"/bin/uhttpd
