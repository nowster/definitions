name: uhttp2
kind: chunk

pre-configure-commands:
- sed -i 's/-Werror//' CMakeLists.txt

configure-commands:
- cmake -DCMAKE_INSTALL_PREFIX=$PREFIX

build-commands:
- make

install-commands:
- make install

post-install-commands:
- install -d "$DESTDIR$PREFIX/sbin" ; cd "$DESTDIR$PREFIX/sbin" ; ln -s ../.."$PREFIX"/bin/uhttpd uhttpd
- install -d "$DESTDIR$PREFIX/lib64" ; cd "$DESTDIR$PREFIX/lib64" ; ln -s ../.."$PREFIX"/lib/uhttpd_ubus.so uhttpd_ubus.so
