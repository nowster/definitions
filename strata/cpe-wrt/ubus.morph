name: ubus
kind: chunk

build-commands:
- cmake -DCMAKE_INSTALL_PREFIX=$PREFIX
- make

install-commands:
- make install

post-install-commands:
- |
  install -d "$DESTDIR/sbin"
  cd "$DESTDIR/sbin"
  ln -s ..$PREFIX/sbin/ubusd ubusd
  install -d "$DESTDIR/bin"
  cd "$DESTDIR/bin"
  ln -s ..$PREFIX/bin/ubus ubus
